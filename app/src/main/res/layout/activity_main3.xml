<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/back2"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/red"
            android:textColor="@color/black"
            android:padding="16dp"
            android:text="Electrician Services"
            android:textSize="24sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#cccccc" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="- Light Fixture Installations"
            android:onClick="onClickLight"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:padding="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="- Electrical Panel Upgrades"
            android:textColor="@color/black"
            android:onClick="onClickPanel"
            android:textSize="18sp"
            android:padding="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="- Wiring Repairs"
            android:onClick="onClickWire"
            android:textSize="18sp"
            android:padding="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="- Outlet/Switch Installations"
            android:textColor="@color/black"
            android:onClick="onClickSwitch"
            android:textSize="18sp"
            android:padding="16dp" />
    </LinearLayout>
</ScrollView>